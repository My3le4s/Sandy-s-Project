<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".MainActivity">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_views"
        />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_view"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFESSEUR"
        android:textColor="#0F1112"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:padding="7dp"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APP."
        android:textColor="#0F1112"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginTop="58dp"
        android:padding="7dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back, Please login"
        android:layout_marginTop="90dp"
        android:textSize="23sp"
        android:textColor="#07243C"
        android:textStyle="bold"
        android:padding="45dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to your account."
        android:layout_marginTop="110dp"
        android:textSize="23sp"
        android:textColor="#07243C"
        android:textStyle="bold"
        android:padding="45dp"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="220dp"
        app:srcCompat="@drawable/img_5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-OR-"
        android:padding="37dp"
        android:layout_marginTop="310dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#060707"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/mEdtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ENTER EMAIL"
        android:inputType="text"
        android:text=""
        android:layout_marginTop="390dp"
        android:textColor="#07090B"
        android:textSize="25sp"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/mEdtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ENTER PASSWORD"
        android:inputType=""
        android:layout_marginTop="460dp"
        android:textColor="#070809"
        android:textSize="25sp"
        android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/mBtnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_marginTop="550dp"
        android:textSize="25sp"
        android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/mBtnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:layout_marginTop="550dp"
        android:textSize="18sp"
        android:layout_marginLeft="200dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By clicking to login, you agree to the terms and conditions of Professeur App."
        android:layout_marginTop="670dp"
        android:textSize="20sp"
        android:textColor="#0877CF"
        android:layout_marginLeft="20dp"/>



</RelativeLayout>