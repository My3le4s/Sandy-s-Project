<?xml version="1.0" encoding="utf-8"?><RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".MainActivity">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_views"
        />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_view"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFESSEUR"
        android:textColor="#0D0E0E"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:padding="7dp"/>

    <EditText
        android:id="@+id/mEdtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ENTER EMAIL"
        android:inputType=""
        android:textColor="#0D0E0E"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/medtpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ENTER PASSWORD"
        android:inputType=""
        android:textColor="#060707"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/MtxtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER HERE"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#070809"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="170dp"/>

    <EditText
        android:id="@+id/mEdtName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="FIRST NAME"
        android:inputType="text"
        android:text=""
        android:textColor="#070809"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/mEdtName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="LAST NAME"
        android:inputType="text"
        android:text=""
        android:textColor="#090A0B"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="290dp"
        android:layout_marginLeft="30dp"
        android:layout_height="50dp"
        android:layout_marginTop="360dp"
        android:padding="18dp"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/mbtnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="578dp"
        android:text="REGISTER"
        android:textColor="#0D0E0E"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APP."
        android:textColor="#0F1112"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="58dp"
        android:padding="7dp"/>


</RelativeLayout>